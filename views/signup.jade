extends simple
	
block nav
	+navbar

block content
	#signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
		.panel.panel-info
			.panel-heading
				.panel-title Sign up
				.signin-div
					a(href='/auth/login',id='signin-link').pull-right Sign in
			.panel-body
				form#signupform(role='form',method='POST',action='/auth/signup').form-horizontal
					.form-group
						label(for='#username').col-md-3.control-label Username
						.col-md-9
							input(type='text',name='username',id='username',placeholder='Enter username').form-control

					.form-group
						label(for='#password').col-md-3.control-label Password
						.col-md-9
							input(type='password',id='password',name='password',placeholder='Enter password').form-control

					.form-group.margin-10
								.col-sm-12.controls
									input(type='submit',value='Signup').btn.btn-success 


block scripts